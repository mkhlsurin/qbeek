{
  "compilerOptions": {
    // Layout
    "rootDir": "src",
    "outDir": "dist",

    // Environment
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",             
    "lib": ["ES2020"],              
    "types": ["node"],

    // Outputs
    "sourceMap": true,
    "declaration": false,            
    "declarationMap": false,

    // Strictness
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Interop & behavior 
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    
  },
  "include": ["src", "src/scripts"]
}
